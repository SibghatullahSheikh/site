---
layout: none
---
<?xml version="1.0" encoding="UTF-8" ?>
<rss xmlns:atom="http://www.w3.org/2005/Atom" version="2.0">
  <channel>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <copyright>Copyright (c) 2013, Nikhil Kothari</copyright>
    <link>{{ site.blog }}</link>
    <title>Nikhil's Blog Feed</title>
    <description>Nikhil's Blog Feed</description>
    <atom:link href="{{ site.blog }}/feed.xml" rel="self" type="application/rss+xml" />
  {% for post in site.posts %}
  <item>
    <guid isPermaLink="true">{{ site.blog }}{{ post.url }}</guid>
    <link>{{ site.blog }}{{ post.url }}</link>
    <comments>{{ site.blog }}{{ post.url }}#comments</comments>
    <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
    <title>{{ post.title | escaped }}</title>
    <description>
      &lt;div&gt;
        {{ post.excerpt | markdownify | escape }}
        &lt;hr /&gt;
        &lt;a href="{{ site.blog }}{{ post.url }}"&gt;Read more or Comment...&lt;/a&gt;
      &lt;/div&gt;
    </description>
  </item>
  {% endfor %}
  </channel>
</rss>
